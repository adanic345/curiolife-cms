{
  "kind": "collectionType",
  "collectionName": "challenges",
  "info": {
    "singularName": "challenge",
    "pluralName": "challenges",
    "displayName": "Challenge",
    "description": "Seasonal or time-bound spiritual engagement campaigns"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "maxLength": 200,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text",
      "maxLength": 1000,
      "required": true
    },
    "detailedDescription": {
      "type": "richtext"
    },
    "startDate": {
      "type": "date",
      "required": true
    },
    "endDate": {
      "type": "date",
      "required": true
    },
    "challengeType": {
      "type": "enumeration",
      "required": true,
      "default": "Time-Bound",
      "enum": [
        "Seasonal",
        "Time-Bound",
        "Open-Ended",
        "Recurring"
      ]
    },
    "participationRules": {
      "type": "richtext"
    },
    "associatedDevotionals": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::devotional.devotional"
    },
    "associatedPrayers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::prayer.prayer"
    },
    "associatedStudies": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::study.study"
    },
    "themes": {
      "type": "component",
      "component": "metadata.theme",
      "repeatable": true
    },
    "difficulty": {
      "type": "component",
      "component": "metadata.difficulty",
      "repeatable": false
    },
    "estimatedCommitment": {
      "type": "component",
      "component": "metadata.duration",
      "repeatable": false
    },
    "goals": {
      "type": "json"
    },
    "rewards": {
      "type": "text",
      "maxLength": 500
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "bannerImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "isActive": {
      "type": "boolean",
      "default": false
    },
    "tags": {
      "type": "json"
    },
    "body_content": {
      "type": "customField",
      "customField": "plugin::ckeditor.CKEditor",
      "options": {
        "output": "HTML",
        "preset": "standard",
        "licenseKey": "eyJhbGciOiJFUzI1NiJ9..ZoY1GQBUoJJO7Tijm2BTzqiIzRtstY_NoneJuisvZSeI56YyZEnC1OvmE9s299M8Dc4WQQYV8FZC5wbySJ1lJQ"
      }
    }
  }
}
