{
  "kind": "collectionType",
  "collectionName": "prayers",
  "info": {
    "singularName": "prayer",
    "pluralName": "prayers",
    "displayName": "Prayer",
    "description": "Guided prayer experiences and templates"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "prayerType": {
      "type": "enumeration",
      "enum": [
        "Guided",
        "Written",
        "Audio-Backed",
        "Contemplative",
        "Intercessory",
        "Gratitude",
        "Petition"
      ],
      "required": true,
      "default": "Guided"
    },
    "description": {
      "type": "text",
      "maxLength": 500
    },
    "introduction": {
      "type": "richtext"
    },
    "steps": {
      "type": "component",
      "repeatable": true,
      "component": "content.prayer-step"
    },
    "writtenPrayer": {
      "type": "richtext"
    },
    "scriptureReferences": {
      "type": "component",
      "repeatable": true,
      "component": "metadata.scripture-reference"
    },
    "themes": {
      "type": "component",
      "repeatable": true,
      "component": "metadata.theme"
    },
    "difficulty": {
      "type": "component",
      "repeatable": false,
      "component": "metadata.difficulty",
      "required": true
    },
    "duration": {
      "type": "component",
      "repeatable": false,
      "component": "metadata.duration",
      "required": true
    },
    "audienceNotes": {
      "type": "text",
      "maxLength": 300
    },
    "audioFile": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["audios"]
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "tags": {
      "type": "json"
    }
  }
}
